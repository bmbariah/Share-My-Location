<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nliveo_purple_colorPrimary</item>
        <item name="colorPrimaryDark">@color/nliveo_purple_colorPrimary</item>
        <item name="colorAccent">@color/nliveo_purple_colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="DarkEditText" parent="Material.Widget.EditText">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">18sp</item>
        <item name="et_labelTextColor">@color/nliveo_purple_colorPrimary</item>
        <item name="et_supportTextErrorColor">@color/nliveo_purple_alpha_colorPrimaryDark</item>
        <item name="et_dividerErrorColor">@color/nliveo_purple_alpha_colorPrimaryDark</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
