<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="exo.mbariah.sharemylocation.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/nliveo_purple_colorPrimary"
        app:popupTheme="@style/PopupMenuStyle"
        app:theme="@style/ToolBarStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/mainbg2">

        <ImageView
            android:id="@+id/inbox"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|top"
            android:layout_margin="10dp"
            android:background="@drawable/share" />


        <TextView
            android:id="@+id/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inbox"
            android:layout_alignEnd="@+id/inbox"
            android:layout_alignRight="@+id/inbox"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="Inbox"
            android:textColor="@color/nliveo_white"
            android:textSize="50sp" />


        <ImageView
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/maps"
            android:layout_gravity="right|top"
            android:layout_margin="10dp"
            android:background="@drawable/inbox" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/about_us"
            android:layout_alignEnd="@+id/about_us"
            android:layout_alignRight="@+id/about_us"
            android:paddingBottom="5dp"
            android:paddingTop="2dp"
            android:text="About"
            android:textColor="@color/nliveo_white"
            android:textSize="50sp" />


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar" />


</RelativeLayout>
